<Page x:Class="Baiko_PrivateAds.Pages.PostDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Baiko_PrivateAds.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PostDetailPage">

    <Grid>
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="243*"/>
                <ColumnDefinition Width="72"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="81*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>

            <TextBlock TextAlignment="Left" Width="312" TextWrapping="Wrap" Text="{Binding Unit}" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" Height="44" Grid.ColumnSpan="2" Margin="2,0,0,0" Grid.Column="1" Grid.Row="1"/>
            <TextBlock TextAlignment="Left" Grid.Column="3" Grid.Row="1" FontSize="18" Text="{Binding Date_public}" Height="44" />
            <TextBlock TextAlignment="Left"  Grid.Row="2" Grid.Column="3"  FontSize="18" Text="{Binding Name_post}" Height="44" />
            <TextBlock TextAlignment="Left"  Grid.Row="3" Grid.Column="3"  FontSize="18" Text="{Binding City}" Height="44" />
            <TextBlock TextAlignment="Left"  Grid.Row="4" Grid.Column="3"  FontSize="18" Text="{Binding Cost}" Height="44"/>

            <TextBlock TextAlignment="Left"  Grid.Row="5" Grid.Column="2"  FontSize="18" Text="{Binding Description}" Height="176" TextWrapping="Wrap" Grid.RowSpan="4" Grid.ColumnSpan="3" Margin="72,0,0,0" VerticalAlignment="Top"   />
            <Image   Grid.RowSpan="5" Grid.Row="2" Grid.Column="1">
                <Image.Source>
                    <Binding Path="Photo">
                        <Binding.TargetNullValue>
                            <ImageSource>C:\Users\Alfa\source\repos\Baiko_PrivateAds\Baiko_PrivateAds\Recources\DefaultPhoto.png</ImageSource>
                        </Binding.TargetNullValue>
                    </Binding>
                </Image.Source>
            </Image>
        </Grid>
    </Grid>
</Page>
